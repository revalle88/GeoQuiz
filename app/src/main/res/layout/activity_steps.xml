<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bignerdranch.android.geoquiz.StepsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/steps_label"

        android:layout_marginLeft="110dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/tv_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginRight="132dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="187dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_cal"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:text="calories"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="46dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_dist"
        android:layout_width="80dp"
        android:layout_height="33dp"
        android:layout_marginLeft="27dp"
        android:text="distance"
        app:layout_constraintLeft_toRightOf="@+id/tv_cal"
        tools:layout_editor_absoluteY="140dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_marginTop="65dp"
        android:text="timer"
        app:layout_constraintTop_toBottomOf="@+id/tv_cal"
        android:layout_marginLeft="46dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="78dp"
        android:layout_height="36dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="64dp"
        android:text="speed"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/tv_dist" />
</android.support.constraint.ConstraintLayout>
